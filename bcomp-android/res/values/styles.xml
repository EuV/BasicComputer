<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasicComputerTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textColorPrimary">@color/black_87</item>
        <item name="android:windowBackground">@color/primary_light</item>
    </style>

    <color name="primary_50">#f1f8e9</color>
    <color name="primary_100">#dcedc8</color>
    <color name="primary_200">#c5e1a5</color>
    <color name="primary_300">#aed581</color>
    <color name="primary_400">#9ccc65</color>
    <color name="primary_500">#8bc34a</color>
    <color name="primary_600">#7cb342</color>
    <color name="primary_700">#689f38</color>
    <color name="primary_800">#558b2f</color>
    <color name="primary_900">#33691e</color>

    <color name="primary_light">@color/primary_100</color>
    <color name="primary">@color/primary_500</color>
    <color name="primary_dark">@color/primary_700</color>

    <color name="accent_light">#ff9e80</color>
    <color name="accent">#ff6e40</color>
    <color name="accent_dark">#ff3d00</color>

    <color name="black_12">#1e000000</color>
    <color name="black_26">#42000000</color>
    <color name="black_54">#89000000</color>
    <color name="black_87">#dd000000</color>
    <color name="black_100">#ff000000</color>

    <color name="white_12">#1effffff</color>
    <color name="white_30">#4cffffff</color>
    <color name="white_70">#b2ffffff</color>
    <color name="white_100">#ffffffff</color>


    <!-- Tabs -->

    <!-- Root LinearLayout -->
    <style name="Container">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Empty TextView -->
    <style name="Indent">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- CardView (directly for the content) -->
    <style name="ContentCommon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">@color/primary_200</item>
    </style>

</resources>
