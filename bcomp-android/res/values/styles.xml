<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BasicComputerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/black_54</item>
        <item name="android:textColorPrimary">@color/black_87</item>
        <item name="android:windowBackground">@color/primary_50</item>
    </style>


    <!-- Tabs -->

    <!-- Root LinearLayout -->
    <style name="Container">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Empty TextView -->
    <style name="Indent">
        <item name="android:layout_weight">@integer/memory_weight</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!-- CardView (directly for the content) -->
    <style name="Content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">@color/fragment_background</item>
        <item name="android:layout_weight">@integer/content_weight</item>
    </style>


    <!-- Common -->

    <!-- Register -->
    <style name="Register">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/register_height</item>
        <item name="android:background">@color/primary_400</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RegisterFixedWidth" parent="Register">
        <item name="android:layout_width">@dimen/register_width</item>
    </style>


    <!-- Keyboard Fragment -->

    <!-- Hex Button -->
    <style name="HexButton">
        <item name="android:background">@drawable/control_button</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!-- Control Fragment -->

    <!-- Control Image Button -->
    <style name="ControlImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- Control Button -->
    <style name="ControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/control_button</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
