<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RegisterView">
        <attr name="full_view" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BusView">
        <attr name="left" format="boolean" />
        <attr name="left_padding" format="dimension" />
        <attr name="top" format="boolean" />
        <attr name="top_padding" format="dimension" />
        <attr name="right" format="boolean" />
        <attr name="right_padding" format="dimension" />
        <attr name="bottom" format="boolean" />
        <attr name="bottom_padding" format="dimension" />
        <attr name="arrow" format="enum">
            <enum name="none" value="0" />
            <enum name="left_top_to_bottom" value="1" />
            <enum name="left_bottom_to_top" value="2" />
            <enum name="top_right_to_left" value="3" />
            <enum name="top_left_to_right" value="4" />
            <enum name="right_bottom_to_top" value="5" />
            <enum name="right_top_to_bottom" value="6" />
            <enum name="bottom_left_to_right" value="7" />
            <enum name="bottom_right_to_left" value="8" />
        </attr>
    </declare-styleable>

</resources>
