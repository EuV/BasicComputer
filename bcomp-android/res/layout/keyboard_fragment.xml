<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/ru.ifmo.cs.bcomp.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/fragment_background"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                style="@style/ControlButton"
                android:text="@string/keyboard_address"
                android:id="@+id/keyboard_address" />

            <Button
                style="@style/HexButton"
                android:tag="3" />

            <Button
                style="@style/HexButton"
                android:tag="2" />

            <Button
                style="@style/HexButton"
                android:tag="1" />

            <Button
                style="@style/HexButton"
                android:tag="0" />

            <Button
                style="@style/ControlButton"
                android:text="@string/keyboard_write"
                android:id="@+id/keyboard_write" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="top"
            android:id="@+id/keyboard_binary" />

    </LinearLayout>

</android.support.v7.widget.CardView>
