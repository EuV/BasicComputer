<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/ru.ifmo.cs.bcomp.android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/primary_200"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            style="@style/ControlButton"
            android:layout_width="40dp"
            android:text="@string/control_read"
            android:id="@+id/keyboard_write" />

        <Button
            style="@style/ControlButton"
            android:layout_width="40dp"
            android:text="@string/control_start"
            android:id="@+id/control_start" />

        <Button
            style="@style/ControlButton"
            android:layout_width="40dp"
            android:text="@string/control_continue"
            android:id="@+id/control_continue" />

        <Switch
            style="@style/ControlButton"
            android:textOff="@string/control_run_state_off"
            android:textOn="@string/control_run_state_on"
            android:id="@+id/control_run_state" />

        <CheckBox
            style="@style/ControlButton"
            android:text="@string/control_clock_state"
            android:id="@+id/control_clock_state" />

    </LinearLayout>

</android.support.v7.widget.CardView>
